<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @league.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @league.description %>
</p>

<p>
  <strong>Team(s):</strong>
  <ul>
    <% @league.teams.each do |team| %>
      <li><%= team.name %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Fixtures:</strong>
  <ul>
    <% @league.fixtures.each do |fixture| %>
      <li><%= fixture.team_id %> vs. <%= fixture.opponent %>, <%= fixture.date.strftime("%m/%d/%Y") %> @ <%= fixture.time.strftime("%l:%M %p") %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_league_path(@league) %> |
<%= link_to 'Back to League Index', leagues_path %>

<% if current_user %>
 <h4>Add a comment:</h4>
   <%= form_for @comment, url: league_comments_path(@league, @comment) do |f| %>
     <p><strong>Content</strong> <%= f.text_area :content, class: 'commentBox form-control' %></p>
     <button type="submit" class="btn btn-sm btn-primary">Create Comment</button>
   <% end %><br>
<% else %>
 <p>Please log in order to add a comment.</p>
<% end %>
<h4>Comments:</h4>
<div id="submitted-comments">
 <% @league.comments.each do |comment| %>
 <div id="comment-<%= comment.id %>">
   <strong class="commentUserName"><%= comment.user.email %></strong> says: <span class="commentContent"><%= comment.content %></span>
 </div>
 <% end %>
</div>
