<p id="notice"><%= notice %></p>

<h1>Fixtures</h1>

<table>
  <thead>
    <tr>
      <th>Home Team</th>
      <th>Away Team</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fixtures.each do |fixture| %>
      <tr>
        <td><%= fixture.team_id %></td>
        <td><%= fixture.opponent %></td>
        <td><%= fixture_date fixture %></td>
        <td><%= fixture_time fixture %></td>
        <td><%= link_to 'Show', fixture %></td>
        <td><%= link_to 'Edit', edit_fixture_path(fixture) %></td>
        <td><%= link_to 'Delete', fixture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
  <%= form_tag("/fixtures", method: "get") do %>
    <%= select_tag "date", options_for_select(["Upcoming Matches", "Old Games"]), include_blank: true %>
    <%= submit_tag "Filter Fixtures" %>
  <% end %>
</div>

<%= link_to 'New Fixture', new_fixture_path %>
